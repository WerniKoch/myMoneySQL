<Window x:Class="myMoney.PasswortWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myMoney"
        mc:Ignorable="d"
        Title="Anmelden" SizeToContent="Height" Width="220" WindowStartupLocation="CenterScreen" WindowStyle="ThreeDBorderWindow" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Icons/Geld.png" AlignmentY="Top" AlignmentX="Center" Opacity="0.3"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Login" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Passwort" Margin="2" />
                <PasswordBox Grid.Row="0" Grid.Column="1" x:Name="txtPasswort" Margin="2"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Login" Click="Button_Login_Click" Width="65" IsDefault="True" Margin="5"/>
            <Button Content="Schliessen" Click="Button_Schliessen_Click" Width="65" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>

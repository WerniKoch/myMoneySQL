<Window x:Class="myMoney.LizenzWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myMoney"
        mc:Ignorable="d"
        Title="Lizenz" Height="320" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Margin="2"  Header="Schlüssel" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Margin="2" Grid.ColumnSpan="3" Text="Dieses Fenster wird mit dem Erwerb einer Lizenz nicht mehr angezeigt." />
                <TextBlock Grid.Row="1" Grid.Column="0" Margin="2" Grid.ColumnSpan="3" Text="Die Lizenz kostet CHF 20.00 und ist einmalig und nicht übertragbar." />
                <TextBlock Grid.Row="2" Grid.Column="0" Margin="2" Grid.ColumnSpan="3" ><Run Text="Die Lizenz ist nur auf diesem PC gültig. Ohne Lizenz können "/><Run Language="de-ch" Text="maximal"/><Run Text=" 3 Konti eröffnet werden."/></TextBlock>

                <TextBlock Grid.Row="4" Grid.Column="0" Margin="2" Text="Code" />
                <TextBox Grid.Row="4" Grid.Column="1" Margin="2" x:Name="tbCode" IsEnabled="False" />
                <Button Grid.Row="4" Grid.Column="2" Margin="2" Content="Kopieren" Click="Button_Kopieren_Click" ToolTip="Code in Zwischenablage kopieren" />
                <TextBlock Grid.Row="5" Grid.Column="0" Margin="2" Text="Freischaltcode" />
                <TextBox Grid.Row="5" Grid.Column="1" Margin="2" x:Name="tbFreischaltCode"/>
                <Button Grid.Row="5" Grid.Column="2" Margin="2" Content="Speichern" Click="Button_Speichern_Click" ToolTip="Freischaltcode speichern" />
                <TextBlock Grid.Row="7" Grid.Column="0" Margin="2" Grid.ColumnSpan="3" Text="Kopiere den Code in die Zwischenablage und maile diesen an werni.koch@bluewin.ch." />
                <TextBlock Grid.Row="8" Grid.Column="0" Margin="2" Grid.ColumnSpan="3" Text="Der Freischaltcode wird per Mail zugestellt und kann hier gespeichert werden." />
                <TextBox Grid.Row="10" Grid.Column="1" Margin="2" x:Name="tbZeit" IsEnabled="False" HorizontalAlignment="Center" Width="30" HorizontalContentAlignment="Right" />
            </Grid>
        </GroupBox>
        <Button Grid.Row="1" Margin="2" Content="Weiter" Click="Button_Schliessen_Click" IsEnabled="False" x:Name="btnSchliessen"/>
    </Grid>
</Window>

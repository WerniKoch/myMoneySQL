<Window x:Class="myMoney.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:p="clr-namespace:myMoney.Properties"
        mc:Ignorable="d"
        Closed="Window_Closed"
        Height="800" Width="1200" WindowStartupLocation="CenterScreen" WindowStyle="None" >
    <Grid Background="#FFD6D6D6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.ColumnSpan="2" x:Name="PanelHeader" VerticalAlignment="Top" Height="50" Background="#FF0F4E7A" MouseDown="PanelHeader_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="my Money - Kontoverwaltung" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Century Gothic" FontSize="18" FontWeight="Bold" Foreground="White" />
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Click="ClickOnButtonMinimaze" Margin="8" Background="Transparent" Foreground="Transparent" BorderThickness="0">
                    <Image Source="Icons/down.ico" Margin="1" />
                </Button>
                <Button Click="ClickOnButtonClose" Margin="8" Background="Transparent" Foreground="Transparent" BorderThickness="0">
                    <Image Source="Icons/close.png" Margin="1" />
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.RowSpan="2" x:Name="sidePanel" Background="#FF0F4E7A" HorizontalAlignment="Left" Width="150" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel>
                    <Grid Height="50" Background="White">
                        <Button HorizontalAlignment="Right" Height="20" VerticalAlignment="Top" Background="Transparent" BorderBrush="Transparent" Click="Button_Click">
                            <Image Source="Icons/menu.png" />
                        </Button>
                    </Grid>
                    <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" FontFamily="Century Gothic" FontSize="14" Foreground="White" BorderBrush="Transparent" Background="Transparent" FontWeight="Bold" >
                        <ListViewItem Height="30" PreviewMouseLeftButtonDown="ClickOnUebersicht">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Icons/home.png" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Margin="15,0,0,0" Text="Übersicht" VerticalAlignment="Center" />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem Height="30" PreviewMouseLeftButtonDown="ClickOnBuchen">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Icons/bank.png" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Margin="15,0,0,0" Text="{x:Static p:Resources.Menu_Buchen}" VerticalAlignment="Center" />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem Height="30" PreviewMouseLeftButtonDown="ClickOnPeriodisch">
                            <StackPanel Orientation="Horizontal" >
                                <Image Source="Icons/periodisch.png" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Margin="15,0,0,0" Text="Periodisch" VerticalAlignment="Center" />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem Height="30" Margin="0,15,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Stammdaten" VerticalAlignment="Center" />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem Height="30" PreviewMouseLeftButtonDown="ClickOnStammKonto">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Icons/bank.png" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Margin="15,0,0,0" Text="Konten" VerticalAlignment="Center" />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem Height="30" PreviewMouseLeftButtonDown="ClickOnStammKategorien">
                            <StackPanel Orientation="Horizontal" >
                                <Image Source="Icons/categorie.png" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Margin="15,0,0,0" Text="Kategorien" VerticalAlignment="Center" />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem Height="30" PreviewMouseLeftButtonDown="ClickOnStammPeriodisch">
                            <StackPanel Orientation="Horizontal" >
                                <Image Source="Icons/periodisch.png" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Margin="15,0,0,0" Text="Periodisch" VerticalAlignment="Center" />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem Height="30" PreviewMouseLeftButtonDown="ClickOnStammReportPDF">
                            <StackPanel Orientation="Horizontal" >
                                <Image Source="Icons/report.png" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Margin="15,0,0,0" Text="Bericht" VerticalAlignment="Center" />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem Height="30" PreviewMouseLeftButtonDown="ClickOnStammReportKategorie">
                            <StackPanel Orientation="Horizontal" >
                                <Image Source="Icons/report.png" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Margin="15,0,0,0" Text="Kategorie" VerticalAlignment="Center" />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem Height="30" Margin="0,15,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Extras" VerticalAlignment="Center" />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem Height="30" PreviewMouseLeftButtonDown="ClickOnStammSetup">
                            <StackPanel Orientation="Horizontal" >
                                <Image Source="Icons/setup.png" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Margin="15,0,0,0" Text="Einstellungen" VerticalAlignment="Center" />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem Height="30" PreviewMouseLeftButtonDown="ClickOnJahresabschluss">
                            <StackPanel Orientation="Horizontal" >
                                <Image Source="Icons/schloss.png" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Margin="15,0,0,0" Text="Abschluss" VerticalAlignment="Center" />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem Height="30" PreviewMouseLeftButtonDown="ClickOnStammInfo">
                            <StackPanel Orientation="Horizontal" >
                                <Image Source="Icons/info.png" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Margin="15,0,0,0" Text="Info" VerticalAlignment="Center" />
                            </StackPanel>
                        </ListViewItem>
                    </ListView>
                </StackPanel>
                <TextBlock Grid.Row="1" x:Name="VersionsNummer" Foreground="White" FontSize="10" Margin="0,0,10,0" HorizontalAlignment="Left" />
            </Grid>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <UserControl x:Name="Control" />
        </Grid>
    </Grid>
</Window>

<UserControl x:Class="myMoney.Controls.PeriodischControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:myMoney.Controls"
             xmlns:local1="clr-namespace:myMoney.Controler"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local1:TypToTextConverter x:Key="TypToTextConverter"/>
    </UserControl.Resources>

    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Selektion" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Buchungen bis" Margin="2" />
                <DatePicker Grid.Row="0" Grid.Column="1" Width="100" HorizontalAlignment="Left" x:Name="dtePerDatum" Margin="2" FirstDayOfWeek="Monday" />
                <Button Grid.Row="0" Grid.Column="2" x:Name="BtnRefresh" Click="Button_Click_Refresh" Margin="2" ToolTip="Periodische Buchungen anzeigen" Background="#FF0F4E7A">
                    <Image Source="../Icons/refresh.ico" Height="20"/>
                </Button>
                <Button Grid.Row="0" Grid.Column="4" x:Name="BtnVerbuchen" Click="Button_Click_Verbuchen" Margin="2" ToolTip="Periodische Buchungen verbuchen" Background="#FF0F4E7A">
                    <Image Source="../Icons/save.ico" Height="20"/>
                </Button>

            </Grid>
        </GroupBox>

        <DataGrid Margin="5" Grid.Row="1" x:Name="DataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="False" RowBackground="AliceBlue" AlternatingRowBackground="MintCream">
            <!--<DataGrid.Resources>
                <Style TargetType="{x:Type DataGridCell}">
                    <EventSetter Event="Selected" Handler="DataGridCell_Selected"/>
                </Style>
            </DataGrid.Resources>-->
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Selektion" Binding="{Binding IsSelektiert}" />
                <DataGridTextColumn Header="Datum" Binding="{Binding Datum, StringFormat=\{0:dd.MM.yyyy\}}" Width="70" />
                <DataGridTextColumn Header="Konto" Binding="{Binding Konto}" Width="150" IsReadOnly="True" />
                <DataGridTextColumn Header="Text" Binding="{Binding BuchText}" Width="250" />
                <DataGridTextColumn Header="Kategorie" Binding="{Binding Kategorie}" Width="150" IsReadOnly="True" />
                <DataGridTextColumn Header="Typ" Width="100">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Typ" Converter="{StaticResource TypToTextConverter}" />
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Währung" Binding="{Binding WaehrungsId}" Width="75" IsReadOnly="True" />
                <DataGridTextColumn Header="Betrag" Binding="{Binding Betrag, ConverterCulture='de-CH', StringFormat={}{0:n2}}" Width="150" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</UserControl>

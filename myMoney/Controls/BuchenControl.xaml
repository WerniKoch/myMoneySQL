<UserControl x:Class="myMoney.Controls.BuchenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:glob="clr-namespace:System.Globalization;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Selektion" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Konto" Margin="2" />
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cbKontoSelektion" SelectionChanged="cbKontoSelektion_SelectionChanged" Margin="2"/>
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Saldo heute" Margin="2" />
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtSaldoHeute" Margin="2" IsEnabled="False" HorizontalContentAlignment="Right" />
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Saldo zukunft" Margin="2" />
                    <TextBox Grid.Row="0" Grid.Column="3" x:Name="txtSaldoZukunft" Margin="2" IsEnabled="False" HorizontalContentAlignment="Right"/>
                </Grid>
            </Grid>
        </GroupBox>

        <Expander Grid.Row="1" IsExpanded="True" Header="Details">
            <GroupBox Header="Buchung" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Text="Datum" Margin="2" />
                    <DatePicker Grid.Row="0" Grid.Column="1" Width="100" HorizontalAlignment="Left" x:Name="dteDatum" Margin="2"/>
                    <TextBlock Grid.Row="1" Text="Typ" Margin="2" />
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="2" x:Name="StackPanelRadio" >
                        <RadioButton GroupName="cbTyp" Content="Zahlung" IsChecked="True" x:Name="raTypZahlung" Margin="2"/>
                        <RadioButton GroupName="cbTyp" Content="Gutschrift" x:Name="raTypGutschrift" Margin="2"/>
                        <RadioButton GroupName="cbTyp" Content="Transfer" x:Name="raTypTransfer" Margin="2"/>
                    </StackPanel>
                    <TextBlock Grid.Row="2" Text="Empfangskonto" Margin="2" />
                    <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cbEmpfangKonto" IsEnabled="{Binding ElementName=raTypTransfer, Path=IsChecked}" Margin="2"/>
                    <TextBlock Grid.Row="3" Text="Buchungstext" Margin="2" />

                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtBuchtext" Margin="2" LostFocus="TxtBuchtext_LostFocus" KeyUp="TxtBuchtext_KeyUp" />
                    <Popup x:Name="autoCompletorListPopup"
                        Visibility="Collapsed"
                        StaysOpen="False"
                        AllowsTransparency="True"
                        PlacementTarget="{Binding ElementName=txtBuchtext}"
                        Width="300">
                        <ListBox x:Name="autoCompletorList"
                            Background="WhiteSmoke"
                            MaxHeight="200"
                            Margin="20 0"
                            SelectionChanged="AutoCompletorList_SelectionChanged"/>
                    </Popup>
                    
                    <TextBlock Grid.Row="4" Text="Kategorie" Margin="2" />
                        <Grid Grid.Row="4" Grid.Column="2" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0"  x:Name="cbKategorie" Margin="2" />
                            <Button Grid.Column="1" x:Name="BtnKategorie" Click="Button_Click_Kategorie" ToolTip="Neu" Width="25" Background="#FF0F4E7A">
                                <Image Source="../Icons/categorie.png" />
                            </Button>
                        </Grid>
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Währung" Margin="2" />
                        <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtWhgId" IsEnabled="False" MaxLength="3" Width="40" HorizontalAlignment="Left" Margin="2" />
                        <TextBlock Grid.Row="6" Text="Betrag" Margin="2" />
                        <TextBox Grid.Row="6" Grid.Column="1" x:Name="txtBetrag" Text="{Binding Betrag, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:#,##0.00}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}}" Margin="2,0,0,2" Width="100" HorizontalAlignment="Left" HorizontalContentAlignment="Right" PreviewTextInput="txtBetrag_PreviewTextInput" GotFocus="txtBetrag_GotFocus" Height="18" VerticalAlignment="Bottom"/>
                        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="2" >
                            <TextBox x:Name="txtFehler" Background="Red" Foreground="White" Width="0" HorizontalAlignment="Left" FontWeight="Bold" />
                            <Button x:Name="BtnNeu" Click="Button_Click_New" Margin="5,0" ToolTip="Neu" Background="#FF0F4E7A">
                                <Image Source="../Icons/new.ico" Height="20"/>
                            </Button>
                            <Button x:Name="BtnLoeschen" ToolTip="Löschen" Click="Button_Click_Delete" Margin="5,0" Background="#FF0F4E7A">
                                <Image Source="../Icons/delete.ico" Height="20"/>
                            </Button>
                            <Button Click="Button_Click_Save" Margin="5,0" ToolTip="Speichern" Background="#FF0F4E7A">
                                <Image Source="../Icons/save.ico" Height="20"/>
                            </Button>
                        </StackPanel>
                </Grid>
            </GroupBox>
        </Expander>

        <DataGrid Margin="5" Grid.Row="2" x:Name="DataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" RowBackground="AliceBlue" AlternatingRowBackground="MintCream" LoadingRow="DataGrid_LoadingRow" EnableRowVirtualization="False" EnableColumnVirtualization="False" >
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridCell}">
                    <EventSetter Event="Selected" Handler="DataGridCell_Selected"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Datum" Binding="{Binding Datum, StringFormat=\{0:dd.MM.yyyy\}}" Width="70" />
                <DataGridTextColumn Header="Buchungstext" Binding="{Binding BuchText}" Width="250" />
                <DataGridTextColumn Header="Kategorie" Binding="{Binding KategorieText}" Width="165" />
                <DataGridTextColumn Header="Währung" Binding="{Binding WaehrungsId}" Width="75" />
                <DataGridTextColumn Header="Gutschrift" Binding="{Binding Gutschrift, ConverterCulture='de-CH', StringFormat={}{0:n2}}" Width="145" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Gutschrift}" Value="0.0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Zahlung" Binding="{Binding Zahlung, ConverterCulture='de-CH', StringFormat={}{0:n2}}" Width="145" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Zahlung}" Value="0.0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Saldo" Binding="{Binding Saldo, ConverterCulture='de-CH', StringFormat={}{0:n2}}" Width="150" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

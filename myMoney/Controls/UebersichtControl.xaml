<UserControl x:Class="myMoney.Controls.UebersichtControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:local="clr-namespace:myMoney"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <DataGrid Grid.Column="0" Margin="2" x:Name="GridUebersicht" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" MouseDoubleClick="GridUebersicht_MouseDoubleClick" RowBackground="AliceBlue" AlternatingRowBackground="MintCream">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Kontobezeichnung" Binding="{Binding Konto}" Width="200" />
                    <DataGridTextColumn Header="Währung" Binding="{Binding WaehrungId}" Width="65" />
                    <DataGridTextColumn Header="Saldo" Binding="{Binding Saldo, ConverterCulture='de-CH', StringFormat={}{0:n2}}" Width="120" >
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{Binding Text, RelativeSource={RelativeSource Self}, Converter={local:MoneyValueToBrushConverter}}"/>
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Saldo heute" Binding="{Binding SaldoToday, ConverterCulture='de-CH', StringFormat={}{0:n2}}" Width="120" >
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{Binding Text, RelativeSource={RelativeSource Self}, Converter={local:MoneyValueToBrushConverter}}"/>
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="1" Text="Total Saldo" Margin="5" />
                <TextBox Grid.Column="2" x:Name="TotalSaldo" IsEnabled="False" Width="120" Margin="5,5,2,5" HorizontalContentAlignment="Right"/>
                <TextBlock Grid.Column="3" Text="Total Saldo heute" Margin="5" />
                <TextBox Grid.Column="4" x:Name="TotalSaldoHeute" IsEnabled="False" Width="120" Margin="5,5,2,5" HorizontalContentAlignment="Right"/>
            </Grid>
        </Grid>

        <GroupBox Grid.Column="1" x:Name="HeaderGrafik">
            <wpf:PieChart LegendLocation="Bottom" Series="{Binding Items}"/>
        </GroupBox>
    </Grid>
</UserControl>

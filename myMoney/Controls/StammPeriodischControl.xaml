<UserControl x:Class="myMoney.Controls.StammPeriodischControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:myMoney.Controls"
             xmlns:glob="clr-namespace:System.Globalization;assembly=mscorlib" 
             xmlns:local1="clr-namespace:myMoney.Controler"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local1:TypToTextConverter x:Key="TypToTextConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Header="Buchung" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Periodizität" Margin="2" />
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cbPeriodizitaet" Margin="2"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Startdatum" Margin="2" />
                <DatePicker Grid.Row="1" Grid.Column="1" Width="100" HorizontalAlignment="Left" x:Name="dteStartDatum" Margin="2"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Letzte Ausführung" Margin="2" />
                <DatePicker Grid.Row="2" Grid.Column="1" Width="100" HorizontalAlignment="Left" x:Name="dteLastDatum" Margin="2"/>
                <TextBlock Grid.Row="3" Text="Typ" Margin="2" />
                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="2">
                    <RadioButton GroupName="cbTyp" Content="Zahlung" IsChecked="True" x:Name="raTypZahlung" Margin="2"/>
                    <RadioButton GroupName="cbTyp" Content="Gutschrift" x:Name="raTypGutschrift" Margin="2"/>
                    <RadioButton GroupName="cbTyp" Content="Transfer" x:Name="raTypTransfer" Margin="2"/>
                </StackPanel>
                <TextBlock Grid.Row="4" Text="Konto" Margin="2" />
                <ComboBox Grid.Row="4" Grid.Column="1" x:Name="cbKonto" Margin="2"/>
                <TextBlock Grid.Row="5" Text="Empfangskonto" Margin="2" />
                <ComboBox Grid.Row="5" Grid.Column="1" x:Name="cbEmpfangKonto" IsEnabled="{Binding ElementName=raTypTransfer, Path=IsChecked}" Margin="2"/>
                <TextBlock Grid.Row="6" Text="Buchungstext" Margin="2" />
                <TextBox Grid.Row="6" Grid.Column="1" x:Name="txtBuchtext" Margin="2"/>
                <TextBlock Grid.Row="7" Text="Kategorie" Margin="2" />
                <ComboBox Grid.Row="7" Grid.Column="1" x:Name="cbKategorie" Margin="2"/>
                <TextBlock Grid.Row="8" Grid.Column="0" Text="Währung" Margin="2" />
                <TextBox Grid.Row="8" Grid.Column="1" x:Name="txtWhgId" IsEnabled="False" MaxLength="3" Width="40" HorizontalAlignment="Left" Margin="2" />
                <TextBlock Grid.Row="9" Text="Betrag" Margin="2" />
                <TextBox Grid.Row="9" Grid.Column="1" x:Name="txtBetrag" Text="{Binding Betrag, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:#,##0.00}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}}" Margin="2" Width="100" HorizontalAlignment="Left" HorizontalContentAlignment="Right" PreviewTextInput="txtBetrag_PreviewTextInput" GotFocus="txtBetrag_GotFocus"/>
                <StackPanel Grid.Row="10" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="2" >
                    <TextBox x:Name="txtFehler" Background="Red" Foreground="White" Width="0" HorizontalAlignment="Left" FontWeight="Bold" />
                    <Button x:Name="BtnNew" Click="Button_Click_New" Margin="5,0" ToolTip="Neu" Background="#FF0F4E7A">
                        <Image Source="../Icons/new.ico" Height="20"/>
                    </Button>
                    <Button x:Name="BtnLoeschen" ToolTip="Löschen" Click="Button_Click_Delete" Margin="5,0" Background="#FF0F4E7A">
                        <Image Source="../Icons/delete.ico" Height="20"/>
                    </Button>
                    <Button Click="Button_Click_Save" Margin="5,0" ToolTip="Speichern" Background="#FF0F4E7A">
                        <Image Source="../Icons/save.ico" Height="20"/>
                    </Button>
                </StackPanel>
            </Grid>
        </GroupBox>

        <DataGrid Margin="5" Grid.Row="1" x:Name="DataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" RowBackground="AliceBlue" AlternatingRowBackground="MintCream">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridCell}">
                    <EventSetter Event="Selected" Handler="DataGridCell_Selected"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Periodizität" Binding="{Binding Periodizitaet}" />
                <DataGridTextColumn Header="Start" Binding="{Binding StartDatum, StringFormat=\{0:dd.MM.yyyy\}}" Width="70" />
                <DataGridTextColumn Header="Typ" Width="100">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Typ" Converter="{StaticResource TypToTextConverter}" />
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Buchungstext" Binding="{Binding BuchText}" />
                <DataGridTextColumn Header="Währung" Binding="{Binding WaehrungsId}" />
                <DataGridTextColumn Header="Betrag" Binding="{Binding Betrag, ConverterCulture='de-CH', StringFormat={}{0:n2}}" Width="150" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

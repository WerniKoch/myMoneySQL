<UserControl x:Class="myMoney.Controls.StammKontoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:myMoney.Controls"
             xmlns:glob="clr-namespace:System.Globalization;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Header="Konto" Margin="5">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Bezeichnung" Margin="2" />
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtBezeichnung" Margin="2" />
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Institution" Margin="2" />
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtInstitution" Margin="2" />
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Kontonummer" Margin="2" />
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtKonto" Margin="2" />
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Währung" Margin="2" />
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtWhgId" IsEnabled="False" MaxLength="3" Width="40" HorizontalAlignment="Left" Margin="2" />
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Startsaldo" Margin="2" />
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtBetrag" Text="{Binding Betrag, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:#,##0.00}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}}" Margin="2" Width="100" HorizontalAlignment="Left" HorizontalContentAlignment="Right" PreviewTextInput="txtBetrag_PreviewTextInput" GotFocus="txtBetrag_GotFocus"/>
                <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="2" >
                    <TextBox x:Name="txtFehler" Background="Red" Foreground="White" Width="0" HorizontalAlignment="Left" FontWeight="Bold" />
                    <Button x:Name="BtnNew" Click="Button_Click_New" Margin="5,0" ToolTip="Neu" Background="#FF0F4E7A">
                        <Image Source="../Icons/new.ico" Height="20"/>
                    </Button>
                    <Button x:Name="BtnLoeschen" ToolTip="Löschen" Click="Button_Click_Delete" Margin="5,0" Background="#FF0F4E7A">
                        <Image Source="../Icons/delete.ico" Height="20"/>
                    </Button>
                    <Button Click="Button_Click_Save" Margin="5,0" ToolTip="Speichern" Background="#FF0F4E7A">
                        <Image Source="../Icons/save.ico" Height="20"/>
                    </Button>
                </StackPanel>
            </Grid>
        </GroupBox>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <DataGrid Margin="5" x:Name="DataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" RowBackground="AliceBlue" AlternatingRowBackground="MintCream">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridCell}">
                        <EventSetter Event="Selected" Handler="DataGridCell_Selected"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Bezeichnung" Binding="{Binding Bezeichnung}" Width="200"/>
                    <DataGridTextColumn Header="Institution" Binding="{Binding Institution}" Width="200"/>
                    <DataGridTextColumn Header="Kontonummer" Binding="{Binding Nummer}" Width="200"/>
                    <DataGridTextColumn Header="Währung" Binding="{Binding WaehrungId}" Width="100"/>
                    <DataGridTextColumn Header="Saldo" Binding="{Binding Saldo, ConverterCulture='de-CH', StringFormat={}{0:n2}}" Width="150" >
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <Button Background="#FF0F4E7A" Click="Click_Up_Button" ToolTip="Selektiertes Konto nach oben schieben" Margin="0,0,5, 2">
                    <Image Source="../Icons/up.ico" Width="20" Height="20"/>
                </Button>
                <Button Background="#FF0F4E7A" Click="Click_Down_Button" ToolTip="Selektiertes Konto nach unten schieben" Margin="0,0,5,2">
                    <Image Source="../Icons/down.ico" Width="20" Height="20"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

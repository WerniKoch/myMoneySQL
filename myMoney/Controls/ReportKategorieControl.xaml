<UserControl x:Class="myMoney.Controls.ReportKategorieControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:local="clr-namespace:myMoney"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <GroupBox Grid.Row="0" Header="Auswertung pro Kategorie" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Von" Margin="4" />
                    <DatePicker Grid.Row="0" Grid.Column="1" Width="100" HorizontalAlignment="Left" x:Name="dteDatumVon"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Bis" Margin="4"/>
                    <DatePicker Grid.Row="0" Grid.Column="3" Width="100" HorizontalAlignment="Left" x:Name="dteDatumBis"/>
                    <TextBlock Grid.Row="0" Grid.Column="4" Text="Kategorie" Margin="4"/>
                    <ComboBox Grid.Row="0" Grid.Column="5" x:Name="cbKategorie" Width="200" />
                    <Button Grid.Row="0" Grid.Column="6" Click="Button_Anzeigen" Margin="2,0" ToolTip="Neu" Background="#FF0F4E7A">
                        <Image Source="../Icons/refresh.ico" Height="20"/>
                    </Button>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Einnahmen" Margin="4" />
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtEinnahmen" Margin="0,4,0,4" IsEnabled="False" HorizontalContentAlignment="Right"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Ausgaben" Margin="4" />
                    <TextBox Grid.Row="1" Grid.Column="3" x:Name="txtAusgaben" Margin="0,4,0,4" IsEnabled="False" HorizontalContentAlignment="Right"/>
                    <TextBlock Grid.Row="1" Grid.Column="4" Text="Umsatz" Margin="4" />
                    <TextBox Grid.Row="1" Grid.Column="5" x:Name="txtUmsatz" Margin="0,4,0,4" IsEnabled="False" HorizontalContentAlignment="Right"/>

                </Grid>
            </GroupBox>
        </Grid>

        <GroupBox Grid.Row="1" x:Name="HeaderGrafik">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="252"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <DataGrid Grid.Column="0" Margin="2" x:Name="GridReportKategorie" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" RowBackground="AliceBlue" AlternatingRowBackground="MintCream">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Unterkategorie" Binding="{Binding Kategorie}" Width="120" />
                        <DataGridTextColumn Header="Umsatz" Binding="{Binding Summe, ConverterCulture='de-CH', StringFormat={}{0:n2}}" Width="120" >
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <wpf:PieChart Grid.Column="1" LegendLocation="Bottom" Series="{Binding Items}" x:Name="Chart" Margin="10"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
